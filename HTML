<script>
  const gallery = document.getElementById('gallery');
  const modal = document.getElementById('detailsModal');
  const modalImg = document.getElementById('modalImg');
  const modalName = document.getElementById('modalName');
  const modalDesc = document.getElementById('modalDesc');
  const modalClose = document.getElementById('modalClose');
  const telegramLink = document.getElementById('telegramLink');
  const viberLink = document.getElementById('viberLink');

  const girlsCount = 60;

  // 임시 sexy girl 이미지 URL 리스트 (randomuser.me 여성을 흉내)
  function getGirlImage(i) {
    // generate random portrait image
    const idx = 10 + (i % 90);
    return `https://randomuser.me/api/portraits/women/${idx}.jpg`;
  }

  function createGirlCard(id) {
    const div = document.createElement('div');
    div.classList.add('card');
    div.tabIndex = 0;
    div.setAttribute('role', 'button');
    div.setAttribute('aria-pressed', 'false');
    div.dataset.id = id;
    div.dataset.name = `Sexy Girl ${id}`;
    div.dataset.desc = `အသက် 20-30နှစ်အတွင်းအရပ်ဖွဲ့မှုရှိသူ Sexy Girl နမူနာ ${id} ပါ။`;
    div.dataset.telegram = 'https://t.me/Night_Goddess_Channel_2';
    div.dataset.viber = 'viber://chat?number=+959675151599';
    div.dataset.img = getGirlImage(id);

    div.innerHTML = `
      <img src="${div.dataset.img}" alt="Sexy Girl ${id}" />
      <div class="name">${div.dataset.name}</div>
    `;

    div.addEventListener('click', () => openModal(div.dataset));
    div.addEventListener('keydown', e => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        openModal(div.dataset);
      }
    });

    return div;
  }

  function openModal(data) {
    modalImg.src = data.img;
    modalImg.alt = data.name;
    modalName.textContent = data.name;
    modalDesc.textContent = data.desc;
    telegramLink.href = data.telegram;
    viberLink.href = data.viber;
    modal.style.display = 'flex';
    modal.focus();
  }

  modalClose.addEventListener('click', () => {
    modal.style.display = 'none';
  });

  window.addEventListener('click', e => {
    if (e.target === modal) {
      modal.style.display = 'none';
    }
  });

  for (let i = 1; i <= girlsCount; i++) {
    gallery.appendChild(createGirlCard(i));
  }
</script>

